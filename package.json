{
  "name": "sf-xml",
  "displayName": "Salesforce XML Beautifier",
  "description": "Salesforce XML beautifiation for XML metadata files",
  "version": "0.0.3",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.91.0"
  },
  "publisher": "dmoruzzi",
  "author": {
    "name": "David Moruzzi",
    "url": "https://dmoruzzi.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmoruzzi/sf-xml-vscode"
  },
  "bugs": {
    "url": "https://github.com/dmoruzzi/sf-xml-vscode/issues"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ],
        "aliases": [
          "XML",
          "xml"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "mocha": "^10.6.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}
